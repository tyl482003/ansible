server {
    listen {{ listen_port }};
    server_name {{ server_name }};

    # Max upload size for WordPress media
    client_max_body_size 64M;

    # Cache static assets
    location ~* \.(?:ico|css|js|gif|jpe?g|png|woff2?|ttf|svg|eot)$ {
        expires 30d;
        access_log off;
        add_header Cache-Control "public";
        proxy_pass {{ proxy_pass_scheme }}://backend;
    }

    # Pass everything else to backend (WordPress/PHP)
    location / {
        proxy_pass {{ proxy_pass_scheme }}://backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 300;   # for big uploads / WP admin
    }
}

upstream backend {
    {% for srv in upstream_servers %}
    server {{ srv }};
    {% endfor %}
}

